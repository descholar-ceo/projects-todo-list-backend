{
  "name": "projects-todo-list-backend",
  "version": "1.0.0",
  "description": "Make projects todo list convenient and easy to track.",
  "main": "./src/index.js",
  "scripts": {
    "lint": "eslint ./src",
    "start": "babel-node ./src/index.js",
    "dev": "nodemon --exec babel-node ./src/index.js",
    "create-db": "npx sequelize-cli db:create",
    "drop-db": "npx sequelize-cli db:drop",
    "migrations": "npx sequelize-cli db:migrate",
    "undo": "npx sequelize-cli db:migrate:undo:all",
    "seed": "npx sequelize-cli db:seed:all",
    "undo-seed": "npx sequelize-cli db:seed:undo",
    "test": "NODE_ENV=test && nyc mocha --require @babel/register ./tests/**/*.js  --timeout 30000 --exit",
    "pretest": "npm run drop-db && npm run create-db && npm run migrations && npm run seed ",
    "posttest": "npm run undo-seed && npm run undo",
    "coverage": "nyc report --reporter=text-lcov"
  },
  "author": "Mugirase Emmanuel",
  "license": "MIT",
  "dependencies": {
    "@babel/node": "^7.8.4",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "babel-node": "0.0.1-security",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.2.0",
    "express": "^4.16.3",
    "morgan": "^1.10.0",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.6",
    "sequelize-cli": "^5.5.1",
    "sequelize-test-helpers": "^1.2.2",
    "swagger-ui-express": "^4.1.4",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/compat-data": "^7.9.0",
    "@babel/core": "^7.8.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@babel/register": "^7.9.0",
    "@babel/runtime": "^7.9.2",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-istanbul": "^6.0.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.20.2",
    "mocha": "^7.1.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.3"
  }
}
